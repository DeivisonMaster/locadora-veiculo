<?xml version="1.0" encoding="UTF-8"?>
<log4j:configuration debug="true"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<!-- Mostra o log em console -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<!-- registra o log em um arquivo -->
	<appender name="arquivo" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="G:/_servidores/wildfly-16.0.0.Final/standalone/log/locadora-veiculo.log" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<root>
		<priority value="info" />
		<appender-ref ref="arquivo" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>